### WLAN ###
[module/wlan]
type = internal/network
interface = wlp3s0
interval = 30
label-connected = " %essid%  " 
label-disconnected = " Not Connected  "
format-padding = 0


### UPTIME ###
[module/uptime]
type = custom/script
exec = $HOME/.config/polybar/uptime.sh
interval = 30
format-prefix = " "
format = <label>
format-padding = 1


### SPOTIFY ###
[module/spotify]
type = custom/script
interval = 5
format-prefix = "  "
format = "<label>"
exec = $HOME/.config/polybar/spotify.py
format-foreground = ${colors.green}
 label =  %output:0:30:%
click-left = playerctl play-pause
format-padding = 1

[module/playpause]
type = custom/script
exec = $HOME/.config/polybar/spot.sh
format-padding = 1
interval = 1
format = <label>
click-left = playerctl play-pause
format-foreground = ${colors.green}

[module/next]
type = custom/script
exec = echo 
format-padding = 1
format = <label>
click-left = playerctl next
format-foreground = ${colors.green}

[module/previous]
type = custom/script
exec = echo 
format-padding = 1
format = <label>
click-left = playerctl previous
format-foreground = ${colors.green}

