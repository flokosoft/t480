# polybar to back
override-redirect = true
wm-restack = bspwm

### COLORS ###
[colors]
black = #000000
white = #faebd7
red = #f00f0f
yellow = #e3e910
blue = #387d8c
purple = #ae3bd7
green = #0ce819


### TEST ###
[bar/test]
monitor = ${env:MONITOR:eDP-1}

width = 100%
height = 40
offset-x = 0
offset-y = 0

background = ${colors.black}
foreground = ${colors.white}

underline-size = 2
underline-color = ${colors.purple}

spacing = 1
# padding-left = 0
# padding-right = 0
module-margin-left = 0
module-margin-right = 0

font-0 = Source Code Pro Medium:size=12;2
font-1 = FontAwesome:size=10;2

modules-left = bspwm 
modules-center = previous playpause next spotify
modules-right = wlan battery0 battery1 backlight volume date 

tray-position = right


### BSPWM ###
[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.black}
label-focused-underline= ${colors.purple}
label-focused-padding = 1

label-occupied = %index%
label-occupied-padding = 1

label-urgent = %index%!
label-urgent-background = ${colors.white}
label-urgent-padding = 1

label-empty = %index%
label-empty-foreground = ${colors.white}
label-empty-padding = 1


### DATE ###
[module/date]
type = internal/date
interval = 10
date = %a %b %d, 
time = %H:%M
label = %date% %time%
format =  <label>
format-foreground = ${colors.yellow}
format-padding = 0


### VOLUME ### 
[module/volume]
type = internal/alsa
format-volume = <ramp-volume><label-volume>
format-muted = <label-muted>
label-volume = %percentage%
label-muted =  mute
label-muted-foreground = #aaa
format-volume-padding = 1
format-muted-padding = 1

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-headphones-0 = 


### BACKLIGHT ###
[module/backlight]
type = internal/backlight
card = intel_backlight
format = <ramp><label>
label = %percentage%%
format-padding = 0
ramp-0 = 
ramp-1 = 
ramp-2 = 


### BATTERY ###
[module/battery0]
type = internal/battery

full-at = 95
battery = BAT0
adapter = AC0
poll-interval = 30

format-charging = <animation-charging><label-charging>%
format-discharging = <ramp-capacity><label-discharging>%
format-full = <ramp-capacity><label-full>%
label-charging = %percentage%
label-discharging = %percentage%
label-full = %percentage%
format-charging-padding = 0
format-discharging-padding = 0
format-full-padding = 0

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-0 = 
